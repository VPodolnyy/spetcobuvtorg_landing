.notFound
  display flex
  flex-direction column
  align-items center
  flex 1
  height 100%
  margin 0
  color $grey-dark
  padding 20px
  justify-content space-between
  header,
  section
    display flex
    flex-direction column
    align-items center
    padding 0px
    gap 5px

    h3,
    h4
      margin 0
      font-weight 500
      line-height 20px
    h2
      font-size 22px
      color $graphite
    h3
      font-size 18px
    h4
      font-size 18px
  a
    width 100%
    max-width 320px
    text-decoration: none
    color white
    font-size 18px
    line-height 20px
    font-weight 500
    background linear-gradient(94.88deg, #759407 13.65%, #98C400 94.73%)
    border-radius 10px
    display flex
    flex-direction row
    justify-content center
    align-items center
    padding 15px 20px
    gap 20px