header
  width 100%
  display flex
  justify-content center
  background #fff
  position fixed
  z-index 1000
  top 0
  border-bottom 2px solid #EC901C
  .container
    width 100%
    max-width 1440px
    display flex
    // align-items center
    justify-content space-between
    padding 15px 0
    margin 0 10px
    img
      position absolute
    nav
      display flex
      gap 50px
      font-weight 500
      font-size 18px
      line-height 20px
      a
        background-image: linear-gradient(#EC901C, #EC901C)
        background-repeat no-repeat
        background-position 0% 100%
        background-size 0% 2px
        transition all .3s
        &:hover
          background-size: 100% 2px
          scale 1.05
      @media (max-width 700px)
        position absolute
        flex-direction column
        top 66px
        background white
        height 100vh
        left 100%
        width 100%
        padding 20px
        transition left .3s ease-in-out
        &.open
          left 0%
    svg
      display none
      @media (max-width 700px)
        display flex