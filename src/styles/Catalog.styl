.container-group
  h2
    font-size 36px
  > h4
    font-size 22px
    font-weight 400
    margin-bottom 5vh
  .container-subGroup
    display flex
    flex-direction column
    gap 100px
    min-height 300px
    align-items center
    section
      height 100%
      min-height 300px
      align-items center
      .img-box
        max-height 300px
        img
          max-height 300px

.container-group
  display flex
  flex-direction column
  justify-content center
  gap 30px
  margin-top 150px
  margin-bottom 150px
  max-width 1040px
  section
    width 100%
    display flex
    height 300px
    gap 50px
    &.revert
      flex-direction row-reverse
    .column
      width 50%
      &.img-box
        display flex
        justify-content center
        background rgba(236, 144, 28, 0.05)
        // background-color #F0D59D
        border-radius 10px
      &.text-box
        display flex
        flex-direction column
        justify-content center
        gap 20px
        font-size 18px
        h4
          position relative
          font-size 24px
          max-width 90%
          &:after
            content ''
            width 50px
            height 3px
            position absolute
            bottom -5px
            left 0
            background-color #EC901C
        a
          max-width 150px
          color white
          padding 7px 15px
          font-size 16px
          border-radius 5px
          text-align center
          font-weight 500
          background linear-gradient(90deg, rgba(252,212,45,1) 2%, rgba(236,144,28,1) 48%)
          &:hover
            box-shadow 4px 2px 15px rgba(0,0,0,0.9)
    img
      height 100%

.container-group-catalog
  display flex
  flex-direction column
  justify-content center
  border-bottom 1px solid rgba(255, 255, 255, 0.2)
  max-width 1040px
  margin-top 150px
  section
    width 100%
    display flex
    gap 50px
    transition transform 0.5s, opacity 0.5s
    padding 30px 15px
    margin-bottom 30px
    &:first-child
      border-top 1px solid rgba(255, 255, 255, 0.2)
    &:not(:last-child)
      border-bottom 1px solid rgba(255, 255, 255, 0.2)
    &.revert
      flex-direction row-reverse
    .column
      width 50%
      &.img-box
        background-size cover
        background-repeat no-repeat
        display flex
        height 300px
        justify-content center
        // background-color #F0D59D
        border-radius 10px
      &.text-box
        display flex
        flex-direction column
        justify-content center
        gap 20px
        font-size 18px
        padding-left 10px
        h4
          position relative
          font-size 24px
          font-family RonduitCapitals
          &:after
            content ''
            width 50px
            height 3px
            position absolute
            bottom -5px
            left 0
            background-color #EC901C
        a
          max-width 150px
          color white
          padding 7px 15px
          font-size 16px
          border-radius 5px
          text-align center
          font-weight 500
          background linear-gradient(90deg, rgba(252,212,45,1) 2%, rgba(236,144,28,1) 48%)
          &:hover
            box-shadow 4px 2px 15px rgba(0,0,0,0.9)
    img
      height 100%

@media (max-width 700px)
  .container-group-catalog
    gap 10px
    border 1px solid rgba(255, 255, 255, 0.2)
    section
      flex-direction column
      padding 20px 10px
      margin 0
      .column
        width 100%
        &.text-box
          padding 0 15px
          font-size 16px
          h4
            font-size 20px !important
          p
            font-weight 400
            font-size 18px
  .container-group
    padding 0 15px
    h2
      font-size 28px
    > h4
      font-size 18px
      font-weight 400
      margin-bottom 5vh
    .container-subGroup
      section
        height inherit
        flex-direction column
        .column
          width 100%
          &.img-box
            height 300px