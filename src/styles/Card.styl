.Card
  display flex
  width 100%
  max-width 1040px
  justify-content space-between
  padding 40px
  gap 20px
  margin 150px 0
  .leftCol
    .imgBox
      display flex
      flex 1
      gap 10px
      .listImages
        display flex
        flex-direction column
        .microImg
          background-color rgba(255, 255, 255, 0.02)
          padding 10px
          // height 20%
          width 80px
          img
            height 100%
            width 100%
            object-fit fill
      .shoes
        background #F1F1F1
        height 100%
        width 100%
        object-fit contain
    .features
      display flex
      flex-direction column
      gap 5px
      width 100%
      h4
        text-align center
        margin 15px 0 5px 0
      .feature
        display flex
        align-items center
        gap 7px
        font-weight 500
  .infoBox
    position relative
    flex 1
    > span
      position absolute
      color orange
      font-size 12px
      font-weight 600
      top -12px
    h2
      font-size 24px
      font-weight 600
      margin-bottom 10px
    .aspects
      h4
        margin 15px 0 5px 0
      span
        font-weight 500
    .features, .characteristics
      display flex
      flex-direction column
      gap 5px
      width 100%
      h4
        text-align center
        margin 15px 0 5px 0
      .feature
        display flex
        align-items center
        gap 7px
        font-weight 500


@media (max-width 700px)
  .Card
    flex-direction column-reverse
    gap 50px
    margin 120px 0
    padding 15px
    .infoBox
      font-weight 500
    .leftCol
      .imgBox
        .listImages
          .microImg
            width 65px
        .img-magnifier-container
          img
            max-height 400px